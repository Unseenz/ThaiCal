<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        android:background="@color/yellowbtn">

        <ImageView
            android:id="@+id/backtoMain"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_gravity="right"
            android:layout_marginLeft="320dp" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สวัสดีคุณ"
            android:textSize="23sp"
            android:fontFamily="@font/mitr_regular"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/uName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="23sp"
            android:fontFamily="@font/mitr_medium"
            android:textColor="@color/black"
            android:layout_marginStart="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กลับ"
            android:textSize="15sp"
            android:fontFamily="@font/mitr_medium"
            android:layout_toRightOf="@id/uName"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-100dp">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/yellowbtn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/titlebmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMR"
                    android:textSize="23sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/bmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMR"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_medium"
                    android:textColor="@color/black"
                    android:layout_below="@id/titlebmr"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/yellowbtn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/titletdee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TDEE"
                    android:textSize="23sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tdee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TDEE"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_medium"
                    android:textColor="@color/black"
                    android:layout_below="@id/titletdee"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/boarderlaypout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp">


                <TextView
                    android:id="@+id/titleAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="อายุ"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_regular"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/titleWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="น้ำหนัก"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_regular"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/titleHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ส่วนสูง"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_regular"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="การออกกำลังกาย"
                    android:textSize="23sp"
                    android:fontFamily="@font/mitr_regular"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/mitr_medium"
                    android:text="age"
                    android:textColor="@color/black"

                    android:textSize="23sp" />


                <TextView
                    android:id="@+id/uWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mitr_medium"
                    android:text="weight"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/uHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mitr_medium"
                    android:text="height"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mitr_medium"
                    android:text="activity"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/editinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellowbtn"
        android:text="แก้ไขข้อมูล"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:fontFamily="@font/mitr_medium"/>


    </LinearLayout>